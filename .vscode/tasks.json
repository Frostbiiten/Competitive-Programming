{
    "version": "2.0.0",
    "tasks": 
    [
        {
            "label": "debugcpp",
            "command": "clang++.exe",
            "args": [
                "-std=c++20",
                "${file}",
                "-Dfdb",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "type": "shell",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
}